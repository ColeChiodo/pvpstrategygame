{
  "name": "fortezza-tactics-online",
  "version": "2.0.0",
  "description": "Multiplayer turn-based PvP strategy game",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:game": "cd game-server && npm run dev",
    "build": "npm run build:frontend && npm run build:backend && npm run build:game",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:game": "cd game-server && npm run build",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:migrate": "cd backend && npx prisma migrate dev",
    "prisma:studio": "cd backend && npx prisma studio",
    "docker:build-all": "docker compose build --no-cache && docker compose up -d",
    "docker:build": "docker compose up --build -d",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
