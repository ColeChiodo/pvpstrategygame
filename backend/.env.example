# Database
DATABASE_URL="postgresql://user:password@localhost:5432/fortezza?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Session
SESSION_SECRET="your-super-secret-session-key-change-in-production"

# OAuth2
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"
DISCORD_CALLBACK_URL="http://localhost:3000/auth/discord/callback"

# Server
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS and OAuth callbacks)
FRONTEND_URL="http://localhost:5173"

# Game Server
GAME_SERVER_PORT=4000

# Local Development (set to "true" to run game server locally instead of K8s)
LOCAL_GAME_SERVER=false

# Kubernetes
KUBERNETES_NAMESPACE="game-servers"
KUBERNETES_CONFIG_PATH="" # Leave empty for in-cluster config

# Domain for game server ingress (Traefik + Cloudflare Tunnel)
GAME_SERVER_DOMAIN="fortezza.colechiodo.cc"

# Production Values (override when deploying to K3s)
# NODE_ENV=production
# DATABASE_URL="postgresql://..."
# REDIS_URL="redis://..."
# FRONTEND_URL="https://fortezza.colechiodo.cc"
# GAME_SERVER_DOMAIN="fortezza.colechiodo.cc"
# LOCAL_GAME_SERVER=false
